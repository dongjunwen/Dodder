{
  "index": {
    "number_of_shards": "2",
    "number_of_replicas": "0",
    "refresh_interval": "1m"
  },
  "analysis": {
    "analyzer": {
      "comma": {
        "type": "pattern",
        "pattern":","
      },
      "my_ik_smart": {
        "type": "custom",
        "tokenizer": "ik_smart",
        "filter": [
          "stemmer"
        ],
        "char_filter": [
          "dot_char_filter"
        ]
      },
      "my_ik_max_word": {
        "type": "custom",
        "tokenizer": "ik_max_word",
        "filter": [
          "stemmer"
        ],
        "char_filter": [
          "dot_char_filter"
        ]
      }
    },
    "char_filter": {
      "dot_char_filter": {
        "type": "pattern_replace",
        "pattern": "\\.",
        "replacement": " "
      }
    }
  }
}